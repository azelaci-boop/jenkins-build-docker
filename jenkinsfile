pipeline {
    agent any

    environment {
        IMAGE_NAME = 'majdi/nginx'
        IMAGE_TAG  = 'latest'
    }

    stages {
        stage('Clone repo') {
            steps {
                git branch: 'main', url: 'https://github.com/azelaci-boop/jenkins-helloworld.git'
            }
        }

        stage('Build Docker image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Test Docker image') {
            steps {
                script {
                    // Run container in detached mode
                    sh "docker run -d --name test-nginx -p 8080:80 ${IMAGE_NAME}:${IMAGE_TAG}"

                    // Wait a few seconds to let nginx start
                    sh "sleep 5"

                    // Test the container is responding
                    sh "curl -I http://localhost:8080"

                    // Stop and remove the container
                    sh "docker rm -f test-nginx"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminée ✅'
        }
    }
}
